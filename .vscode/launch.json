{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "help",
			"type": "go",
			"request": "launch",
			// "mode": "auto",
			"program": "${workspaceFolder}",
			"args": [
				"--help"
			]
		},
		{
			"name": "pm",
			"type": "go",
			"request": "launch",
			// "mode": "auto",
			"program": "${workspaceFolder}",
			"args": [
				"pm"
			]
		},
		{
			"name": "pm status",
			"type": "go",
			"request": "launch",
			// "mode": "auto",
			"program": "${workspaceFolder}",
			"args": [
				"pm",
				"status"
			]
		},
		{
			"name": "pm daemon",
			"type": "go",
			"request": "launch",
			// "mode": "auto",
			"program": "${workspaceFolder}",
			"args": [
				"pm",
				"daemon"
			]
		},
		{
			"name": "bootstrap",
			"type": "go",
			"request": "launch",
			// "mode": "auto",
			"program": "${workspaceFolder}/examples/gdev",
			"args": [
				"bootstrap"
			]
		},
		{
			"name": "bootstrap dry-run",
			"type": "go",
			"request": "launch",
			// "mode": "auto",
			"program": "${workspaceFolder}/examples/gdev",
			"args": [
				"bootstrap",
				"--dry-run"
			]
		},
		{
			"name": "bootstrap help",
			"type": "go",
			"request": "launch",
			// "mode": "auto",
			"program": "${workspaceFolder}",
			"args": [
				"bootstrap",
				"-h"
			]
		},
		{
			"name": "bootstrap k3s cleanp-containerd",
			"type": "go",
			"request": "launch",
			// "mode": "auto",
			"program": "${workspaceFolder}",
			"args": [
				"bootstrap",
				"k3s",
				"cleanup-containerd"
			]
		},
		{
			"name": "stack start",
			"type": "go",
			"request": "launch",
			// "mode": "auto",
			"program": "${workspaceFolder}",
			"args": [
				"start"
			]
		},
		{
			"name": "build self",
			"type": "go",
			"request": "launch",
			// "mode": "auto",
			"program": "${workspaceFolder}",
			"args": [
				"build",
				"-v",
				"."
			]
		},
		{
			"name": "ex: stack start",
			"type": "go",
			"request": "launch",
			// "mode": "auto",
			"program": "${workspaceFolder}/_example/stack",
			"args": [
				"start"
			]
		},
		{
			"name": "attach: gdev",
			"type": "go",
			"request": "attach",
			"processId": "gdev.debug"
		},
		{
			"name": "gocache sftp",
			"type": "go",
			"request": "launch",
			"program": "${workspaceFolder}",
			"args": [
				"gocache",
				"sftp://${input:sftphost}/${input:sftpdir}"
			]
		},
		{
			"name": "gocache http demo server",
			"type": "go",
			"request": "launch",
			"program": "${workspaceFolder}/addons/gocache/http/server",
		},
		{
			"name": "uninstall k3s",
			"type": "go",
			"request": "launch",
			"program": "${workspaceFolder}",
			"args": [
				"bootstrap",
				"k3s",
				"uninstall"
			]
		},
		{
			"name": "Run current package",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${fileDirname}",
			"console": "integratedTerminal"
		},
		{
			"name": "Run current file",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${file}",
			"console": "integratedTerminal"
		}
	],
	"inputs": [
		{
			"id": "sftphost",
			"type": "promptString",
			"description": "SFTP host (e.g., user@host:port)"
		},
		{
			"id": "sftpdir",
			"type": "promptString",
			"description": "SFTP base directory (absolute path)"
		}
	]
}
